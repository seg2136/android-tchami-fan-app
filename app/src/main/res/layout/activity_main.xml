<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="@android:color/black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainAppPic"
        android:src="@drawable/tchami_album_cover"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mainLabel"
        android:layout_above="@+id/aboutButton"
        android:contentDescription="Tchami Album Cover"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ Tchami ~"
        android:id="@+id/mainLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp"
        android:background="#14305e"
        android:textColor="@android:color/white"
        android:text="@string/about_button"
        android:layout_alignRight="@+id/mainLabel"
        android:layout_alignEnd="@+id/mainLabel"
        android:layout_alignLeft="@+id/mainLabel"
        android:layout_alignStart="@+id/mainLabel"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shows_button"
        android:id="@+id/showsButton"
        android:layout_alignParentBottom="true"
        android:background="#14305e"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/aboutButton"
        android:layout_alignEnd="@+id/aboutButton"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_alignStart="@+id/aboutButton"/>
</RelativeLayout>
